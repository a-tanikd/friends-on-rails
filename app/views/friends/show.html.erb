<div class="bg-light p-4">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <hr>

  <dl class="row">
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9"><%= @friend.email %></dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-3">Phone</dt>
    <dd class="col-sm-9"><%= @friend.phone %></dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-3">Twitter</dt>
    <dd class="col-sm-9"><%= @friend.twitter %></dd>
  </dl>

  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-primary" %>
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
</div>


